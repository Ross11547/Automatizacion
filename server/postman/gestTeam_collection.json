		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1) Código de estado correcto\r",
							"pm.test(\"Status 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2) Devuelve mensaje de éxito\r",
							"pm.test(\"Mensaje de inicio de sesión correcto\", function () {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(json.mensaje).to.eql(\"Inicio de sesión correcto\");\r",
							"});\r",
							"\r",
							"// 3) Devuelve un token (JWT)\r",
							"pm.test(\"Devuelve token JWT\", function () {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(json).to.have.property(\"token\");\r",
							"  pm.expect(json.token).to.be.a(\"string\");\r",
							"  pm.expect(json.token.split('.').length).to.eql(3);\r",
							"});\r",
							"\r",
							"// 4) Guardar token en el environment\r",
							"const json = pm.response.json();\r",
							"pm.environment.set(\"token\", json.token);\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
